@model PriCone.Models.viewModels.registerViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/registerStyle.css" rel="stylesheet" />
    <title>Đăng Ký</title>
</head>

<body>
    <div id="form-login">
        <div id="left">
            <img src="~/Content/home_kv_chara.png">
        </div>
        <div id="right">
            <img id="logo" width="400px" src="~/Content/Wiki-wordmark.png">
            @Html.ValidationSummary(true, null)
            @using (Html.BeginForm("Register", "Char", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <input type="text" class="form-control" id="usr" name="Username" placeholder="Người dùng" required>
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="pwd" name="Password" placeholder="Mật khẩu" required>
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="pwd" name="FullName" placeholder="Đầy đủ tên" required>
                </div>
                <div class="form-group">
                    <input type="date" class="form-control" id="pwd" name="Birthday" required>
                    @*@Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "text-danger" })*@
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="pwd" name="Address" placeholder="Địa chỉ" required>
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" id="pwd" name="Phone" placeholder="Số điện thoại" required>
                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" id="pwd" name="Email" placeholder="Email" required>
                </div>
                <div class="form-group submit">
                    <input type="submit" size="30" class="form-control submit" id="log" value="Đăng ký" required>
                </div>
                <p>
                    Nếu đã có tài khoản thì
                    <a href="@Url.Action("Login", "Char")">đăng nhập</a> nha!
                </p>
            }
            </div>
    </div>
</body>

</html>
