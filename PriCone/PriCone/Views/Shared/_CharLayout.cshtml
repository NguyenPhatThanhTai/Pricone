<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @RenderSection("header", false)
</head>

<body>
    <div class="header" id="header">
        <header>
            <div class="topnav">
                <div id="logo-left">
                    <div id="logo" class="active" onclick="openNav()"><a href="#">&#9776; </a></div>
                </div>
                <div id="img-left">
                    <img id="logo-image" src="~/Content/Wiki-wordmark.png">
                </div>
                <div id="img-left">
                    <h1 style="color: rgba(187, 93, 196, 0.692); text-align: center;">Giới thiệu hệ thống nhân vật</h1>
                </div>
                <div id="login-right">
                    <a href="@Url.Action(ViewBag.Login,"Char")">@ViewBag.CheckLogin</a>
                </div>
                @*<a href="#news">News</a>
                    <a href="#contact">Contact</a>
                    <a href="#about">About</a>*@
            </div>
        </header>

        <div id="mySidenav" class="sidenav">
            <a href="#">Trang chủ</a>
            <a href="#">Liên hệ</a>
            <a href="#">Đăng nhập</a>
            <a href="#">Đăng ký</a>
            <a href="#">About</a>
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        </div>

        <div class="ThanhChucNang">
            <a href="#">Trang chủ</a>
            <a href="#">Cốt truyện</a>
            <a href="#">Thông tin nhân vật</a>
            <a href="#">các bộ trang bị</a>
            <a href="#">Gatcha</a>
        </div>
    </div>

    <div id="main">
        @RenderBody()
    </div>
</body>
@*<footer>
    &copy; Bản quyền thuộc về DHTT - &reg;Phát triển bởi DHTT-Design
</footer>*@

</html>

<script>
    function openNav() {
        document.getElementById("mySidenav").style.width = "250px";
        document.getElementById("main").style.marginRight = "50px";
        document.getElementById("header").style.marginRight = "50px";
        document.getElementById("main").style.marginLeft = "250px";
        document.getElementById("header").style.marginLeft = "250px";
    }

    function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
        document.getElementById("main").style.marginLeft = "150px";
        document.getElementById("main").style.marginRight = "150px";
        document.getElementById("header").style.marginLeft = "150px";
        document.getElementById("header").style.marginRight = "150px";
    }
</script>
